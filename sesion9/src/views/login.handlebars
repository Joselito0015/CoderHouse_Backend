{{!-- login implementation user and password --}}
{{#if user}}
    <h1>Welcome {{user}}</h1>
{{else}}
    {{!-- login with css in line --}}
    <style>
        .login {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        .login input {
            margin: 10px;
            padding: 10px;
            border-radius: 5px;
            border: 1px solid #ccc;
        }

        .login button {
            margin: 10px;
            padding: 10px;
            border-radius: 5px;
            border: 1px solid #ccc;
            background-color: #f0f0f0;
        }
    </style>
    <div class="login">
        <input type="text" id="email" placeholder="email">
        <input type="password" id="password" placeholder="Password">
        <button onclick=login()>Login</button>
        {{!-- register button to redirect to register --}}
        <button><a href="/api/users/register">Registrate</a></button>
        
    </div>

{{/if}}